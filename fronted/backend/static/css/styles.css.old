/* 定义颜色变量 */
/* light mode color */
:root {
  --light-bg-color: #f8f9fa;
  --light-bg1-color: #dee2e6;
  --light-text-color: #343a40;
}
/* dark mode color */
:root {
  --dark-bg-color: #343a40;
  --dark-text-color: #f8f9fa;
}

/* main color */
:root {
  --book-bg-color: #f16667;
  --title-bg-color: #8dcc93;
  --node-bg-color: #57c7e3;
  --scrollbar-track-color: #f1f1f1;
  --scrollbar-thumb-color: #888;
  --scrollbar-thumb-hover-color: #555;

  --bg-color: var(--light-bg-color);
  --bg1-color: var(--light-bg1-color);
  --text-color: var(--light-text-color);
}

body {
  font-family: "Microsoft YaHei", Arial, sans-serif;
  background-color: var(--bg-color);
}

h1 {
  font-weight: bold;
  margin-bottom: 20px;
}

#toggle-theme {
  position: fixed; /* 设置为固定定位 */
  bottom: 10%; /* 距离底部 10%，即在底部 90% 的位置 */
  right: 20px; /* 距离右侧 20px */
  z-index: 999; /* 确保按钮始终显示在最上层 */
}

#graph {
  padding: 20px;
  background-color: var(--bg-color);
  border-radius: 5px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.key {
  font-weight: bold;
}

.btn-book,
.btn-title,
.btn-node {
  color: var(--text-color);
}

.btn-book {
  background-color: var(--book-bg-color);
  border: none;
}

.btn-title {
  background-color: var(--title-bg-color);
  border: none;
}

.btn-node {
  background-color: var(--node-bg-color);
  border: none;
}

#data-display {
  position: fixed; /* 设置为固定定位 */
  top: 20px; /* 距离顶部 20px */
  right: 20px; /* 距离右侧 20px */
  width: 300px; /* 设置宽度为 300px */
  max-height: 80vh; /* 设置最大高度为 80% 的视口高度 */
  overflow-y: auto; /* 如果内容过长，则显示滚动条 */
  background-color: var(--bg-color);
  padding: 20px;
  border: 1px solid var(--bg1-color);
  border-radius: 5px;
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
  width: 5px;
  height: 5px;
}

::-webkit-scrollbar-track {
  background-color: var(--scrollbar-track-color);
}

::-webkit-scrollbar-thumb {
  background-color: var(--scrollbar-thumb-color);
}

::-webkit-scrollbar-thumb:hover {
  background-color: var(--scrollbar-thumb-hover-color);
}
